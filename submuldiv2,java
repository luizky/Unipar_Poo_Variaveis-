import java.util.Scanner;

class Contas {
    public static void main(String[] args) {
        Scanner scanner = new Scanner (System.in);
        
        Double num1, num2, soma, sub, div, mult;
        
        System.out.println("Divisao de numeros: ");
        System.out.println("Informe o primeiro numero: ");
        num1 = scanner.nextDouble();
        System.out.println("Informe o segundo numero: ");
        num2 = scanner.nextDouble();
        
        soma = (num1 + num2);
        sub = (num1 - num2);
        div = (num1 / num2);
        mult = (num1 * num2);
        
        System.out.println("A soma dos seus numeros sao: " + soma);
        System.out.println("A subtracao dos seus numeros sao: " + sub);
        System.out.println("A divisao dos seus numeros sao: " + div);
        System.out.println("A multiplicacao dos seus numeros sao: " + mult);
        
    }
}
